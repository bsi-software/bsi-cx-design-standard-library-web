{% apply spaceless %}
{% set buttonElementId = elementId ?: 'button-v3cFFn' %}
{% set buttonElementPartId = elementPartId ?: 'button-part-0Cq8Xc' %}
{% set buttonIconPartId = iconPartId ?: 'button-part-icon-f1TI9P' %}
{% set buttonText = (buttonText ?: properties.buttonText) ?: bsi_cx_lorem(3) %}
{% set buttonColor = (buttonColor ?: properties.buttonColor) ?: 'bsi-btn-color-primary' %}
{% set buttonLayout = (buttonLayout ?: properties.buttonLayout) ?: 'bsi-btn-filled' %}
{% set buttonSize = (buttonSize ?: properties.buttonSize) ?: 'bsi-btn-size-md' %}
{% set buttonWidth = (buttonWidth ?: properties.buttonWidth) ?: 'bsi-btn-width-default' %}
{% set buttonBorderRadius = (buttonBorderRadius ?: properties.buttonBorderRadius) ?: 'bsi-corner-rounded' %}
{% set buttonLetterCase = (buttonLetterCase ?: properties.buttonLetterCase) ?: 'bsi-btn-letter-default' %}

<div x-data="btnElement" data-bsi-element="{{ buttonElementId }}" class="{{ 'bsi-element-' ~ buttonElementId }} bsi-btn-element {{ buttonColor }} {{ buttonLayout }} {{ buttonSize }} {{ buttonWidth }} {{ buttonBorderRadius }} {{ buttonLetterCase }} bsi-btn-icon-hide">
	<a role="button" x-init="initBtn" class="btn" data-bsi-element-part="{{ buttonElementPartId }}" href="#">{{ buttonText }}</a>
	<label hidden class="bsi-icon-identifier" data-bsi-element-part="{{ buttonIconPartId }}">arrow-right</label>
</div>
{% endapply %}
