{# TODO: Naming anpassen, da es nur für das Text Input Field ist (je nachdem ob ich das noch auslagere oder nicht) #}
{% apply spaceless %}
    {% set formCheckboxElementId = elementId ?: 'checkbox-49f468e6' %}
    {% set formCheckboxElementPartId = elementPartId ?: 'checkbox-part-7f02c9ea' %}
    {% set formCheckboxHelperTextPartId = formCheckboxHelperTextPartId ?: 'checkbox-helper-text-part-5989e5eb' %}
    {% set formCheckboxErrorInvalidPartId = errorInvalidPartId ?: 'checkbox-error-invalid-part-21861f61' %}
    {% set formCheckboxLabelText = (labelText ?: properties.formCheckboxLabelText) ?: bsi_cx_lorem(3) %}
    {% set formCheckboxHelperText = (infoText ?: properties.formCheckboxHelperText) ?: "" %}
    {% set formCheckboxErrorInvalidText = (errorInvalidText ?: properties.errorInvalidText) ?: 'Der Wert, den Sie für dieses Feld eingegeben haben, ist ungültig.' %}

    <div x-data="checkbox" data-bsi-element="{{ formCheckboxElementId }}" class="bsi-element-{{ formCheckboxElementId }} form-element" data-bsi-element-part="{{ formCheckboxElementPartId }}">
        <div class="empty-element"></div> {# This Element is only for the option, that the label from other Form Elements stands on the left side insted of in the top of the element #}
        <div class="checkbox-container">
            <div class="checkbox-with-label">
                <input id="checkbox-element" type="checkbox" class="native-checkbox"></input>
                <span class="visual-checkbox" @click="toggle"></span>
                <label for="checkbox-element" class="form-label">{{ formCheckboxLabelText }}</label>  
            </div>
            {% block checkbox_info_texts %}
                {# TODO: nur einen Fehlertext, vielleicht einen für leere Felder die requiered sind auf Formularebene einfügen #}
                <div data-bsi-element-part="{{ formCheckboxErrorInvalidPartId }}" class="invalid-feedback">
                    {{ formCheckboxErrorInvalidText }}
                </div>
                <div class="helper-text">
                    <div data-bsi-element-part="{{ formCheckboxHelperTextPartId }}" class="form-text">{{ formCheckboxHelperText }}</div>
                </div>
            {% endblock %}
        </div>
    </div>
{% endapply %}